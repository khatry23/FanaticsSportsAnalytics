# General
ENV=local

# Postgres (event store)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=events
POSTGRES_USER=events_user
POSTGRES_PASSWORD=change_me

# RabbitMQ / AmazonMQ
RABBITMQ_URL=amqps://user:pass@broker-host:5671/vhost

# AWS / S3
AWS_REGION=us-east-1
S3_BUCKET=sports-card-events
S3_PREFIX=raw/events
AWS_ACCESS_KEY_ID=change_me
AWS_SECRET_ACCESS_KEY=change_me

# Snowflake
SNOWFLAKE_ACCOUNT=account
SNOWFLAKE_USER=user
SNOWFLAKE_PASSWORD=change_me
SNOWFLAKE_ROLE=SYSADMIN
SNOWFLAKE_WAREHOUSE=ANALYTICS_WH
SNOWFLAKE_DATABASE=SPORTS_CARD_ANALYTICS
SNOWFLAKE_RAW_SCHEMA=RAW
SNOWFLAKE_SILVER_SCHEMA=SILVER
SNOWFLAKE_GOLD_SCHEMA=GOLD

# dbt
DBT_TARGET=dev
DBT_PROFILES_DIR=./dbt

# Data quality thresholds
RAW_EVENTS_FRESHNESS_WARN_HOURS=24
RAW_EVENTS_FRESHNESS_ERROR_HOURS=48
VOLUME_ANOMALY_PCT=0.5
VOLUME_ANOMALY_LOOKBACK_DAYS=7

# Airflow
AIRFLOW_HOME=./airflow
AIRFLOW__CORE__LOAD_EXAMPLES=False
